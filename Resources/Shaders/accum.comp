#version 450

layout (local_size_x = 16, local_size_y = 16) in;
layout (binding = 0, rgba32f) uniform image2D traceImage;
layout (binding = 1, rgba32f) uniform image2D accumImage;

void main()
{
    vec4 res = imageLoad(traceImage, ivec2(gl_GlobalInvocationID.xy));
    imageStore(accumImage, ivec2(gl_GlobalInvocationID.xy), res);
}